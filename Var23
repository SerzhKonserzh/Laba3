#include <iostream>
#include <cstring>
#include <string>
using namespace std;
class mas
{
private:
	int* ms;
	int size;
public:
	mas()
	{
		size = 1;
		ms=new int[size];
	}
	mas(int amount)
	{
		ms=new int[amount];
		size = amount;
	}
	mas(const mas &obj)
	{
		size = obj.size;
		ms = new int[size];
		for (int i = 0; i < size; i++)
		{
			ms[i] = obj.ms[i];
		}
	}
	~mas() {
		delete [] ms;
	}
	int get_elem(int el)
	{
		return ms[el-1];
	}
	void set_elem(int el,int new_el)
	{
		ms[el] = new_el;
	}
	void print()
	{
		for(int i=0;i<size;i++)
			cout<<ms[i]<<" ";
	}
	void shell()
	{
		int temp, S;
		int i, j;
		S = size;
		S = S / 2;
		while (S > 0)
		{
			for (i = 0; i < size - S; i++)
			{
				j = i;
				while (j >= 0 && ms[j] > ms[j + S])
				{
					temp = ms[j];
					ms[j] = ms[j + S];
					ms[j + S] = temp;
					j--;
				}
			}
			S = S / 2;
		}
	}
	mas operator+(const mas& second)
	{
		
		if (this->size != second.size)
			return mas();
		else
		{
			mas ms3(size);
			for (int i = 0; i < this->size; i++)
			{
				ms3.ms[i] = this->ms[i] + second.ms[i];
			}
			return ms3;
		}

	}
	mas operator-(const mas& second)
	{
		
		if (this->size != second.size)
			return mas();
		else
		{
            mas ms3(size);
			for (int i = 0; i < this->size; i++)
			{
				ms3.ms[i] = this->ms[i] - second.ms[i];
			}
			return ms3;
		}
	}
};
int main()
{
	int new_el;
	mas m1(5),m2(5);
	cout << "MS1:" << endl;
	for (int i = 0; i < 5; i++)
	{
		cout << "Enter element(ms1): ";
		cin >> new_el;
		m1.set_elem(i, new_el);
	}
	cout << "MS2:" << endl;
	for (int i = 0; i < 5; i++)
	{
		cout << "Enter element(ms2): ";
		cin >> new_el;
		m2.set_elem(i, new_el);
	}
	m1.print();
	cout << "\n";
	m2.print();
	m1.shell();
	m2.shell();
	cout << "\n";
    m1.print();
	cout << "\n";
	m2.print();
	cout << "\n";
	mas m3 = m1 - m2;
	m3.print();
	return 0;
}
